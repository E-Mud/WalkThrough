<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_nav_drawer</item>
    </style>
    
    <style name="CodeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#6a6a6a</item>
    </style>
    
    <style name="DrawerItemText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#505050</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    
    <style name="DrawerDateText" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:textColor">#505050</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    
    <style name="DrawerHeaderText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#6a6a6a</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    
    <style name="Divider" parent="AppTheme">
        <item name="android:background">#d6d6d6</item>
        <item name="android:layout_marginLeft">@dimen/draweritem_padding</item>
        <item name="android:layout_marginRight">@dimen/draweritem_padding</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

</resources>
