<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/draweritem_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="2dp" >

        <ProgressBar
            android:id="@+id/progressBarLX"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:indeterminate="false"
            android:max="20"
            android:minHeight="16dp"
            android:progress="4"
            android:progressDrawable="@drawable/progressbar_left_drawable" />

        <ProgressBar
            android:id="@+id/progressBarLY"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:indeterminate="false"
            android:max="20"
            android:minHeight="16dp"
            android:progress="8"
            android:progressDrawable="@drawable/progressbar_left_drawable" />

        <ProgressBar
            android:id="@+id/progressBarLZ"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:indeterminate="false"
            android:max="20"
            android:minHeight="16dp"
            android:progress="5"
            android:progressDrawable="@drawable/progressbar_left_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="2dp" >

        <ProgressBar
            android:id="@+id/progressBarRX"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:indeterminate="false"
            android:max="20"
            android:minHeight="16dp"
            android:progress="2"
            android:progressDrawable="@drawable/progressbar_right_drawable" />

        <ProgressBar
            android:id="@+id/progressBarRY"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:indeterminate="false"
            android:max="20"
            android:minHeight="16dp"
            android:progress="4"
            android:progressDrawable="@drawable/progressbar_right_drawable" />

        <ProgressBar
            android:id="@+id/progressBarRZ"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:indeterminate="false"
            android:max="20"
            android:minHeight="16dp"
            android:progress="3"
            android:progressDrawable="@drawable/progressbar_right_drawable" />

    </LinearLayout>

</LinearLayout>
